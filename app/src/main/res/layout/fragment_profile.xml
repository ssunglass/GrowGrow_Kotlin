<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment"
    android:background="@android:color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_bar_layout_profile"
        android:background="@android:color/white"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/search_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_marginTop="10dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <TextView
                        android:id="@+id/fullname_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        android:textSize="24dp"
                        />

                    <TextView
                        android:id="@+id/username_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Userid"
                        />
                    
                    
                </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/edit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_marginLeft="10dp"
                    />


                <ImageButton
                    android:id="@+id/share_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_marginRight="20dp"

                    />

                

            </RelativeLayout>


            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>



    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/app_bar_layout_profile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <LinearLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="100dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="2dp"
                    android:background="#bebebe"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/depart_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="계열"/>

                    <TextView
                        android:id="@+id/major_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전공"/>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/mid_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="100dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="2dp"
                    android:background="#bebebe"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                   />



                    <TextView
                        android:id="@+id/summary_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="요약"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="100dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="2dp"
                    android:background="#bebebe"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">



                <Button
                    android:id="@+id/add_keyword_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="키워드 추가"
                    android:layout_marginRight="15dp"
                    />

                    <Button
                        android:id="@+id/add_bio_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="바이오 추가"

                        />

                </LinearLayout>





                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/keywords_chip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >


                </com.google.android.material.chip.ChipGroup>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <View
                    android:layout_width="80dp"
                    android:layout_height="2dp"
                    android:background="#bebebe"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Footprint"
                    android:layout_gravity="center"/>


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_bio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp">

            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>





    </androidx.core.widget.NestedScrollView>




</RelativeLayout>